<?xml version="1.0" encoding="utf-8"?><!--
    This vertical linear layout contains all the views in the AddNoteActivity code.
    This includes an EditText to adtaskEntrytask description, and buttons to select a priority
-->
<android.support.constraint.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <!-- EditText for getttaskEntrytask description input -->
    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLength="60"
        android:maxLines="2"
        android:textColor="@color/white"
        android:hint="@string/edit_note_description"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:elevation="5dp"
        style="@style/TextAppearance.AppCompat.Headline"

        android:textColorHint="@color/white"
        android:padding="@dimen/text_side_margin"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="@id/editTextDescription"
        app:layout_constraintTop_toBottomOf="@id/editTextDescription"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingEnd="@dimen/text_side_margin"

        android:paddingStart="@dimen/text_side_margin"
        android:paddingTop="@dimen/activity_vertical_margin"

        >
        <EditText
            android:gravity="center|start"
            android:layout_gravity="start|top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/content"
            android:hint="@string/edit_note_content"
            app:layout_constraintBottom_toBottomOf="parent"


            />
    </ScrollView>




